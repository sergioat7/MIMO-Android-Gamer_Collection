<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_search"
    app:startDestination="@id/searchFragment"
    >

    <fragment
        android:id="@+id/searchFragment"
        android:name="es.upsa.mimo.gamercollection.fragments.GameSearchFragment"
        android:label="@string/game_search"
        tools:layout="@layout/fragment_game_search"
        >

        <action
            android:id="@+id/action_searchFragment_to_gameDetailActivity"
            app:destination="@id/gameDetailActivity"
            />

    </fragment>

    <fragment
        android:id="@+id/gameDetailFragment"
        android:name="es.upsa.mimo.gamercollection.fragments.GameDetailFragment"
        android:label="gameDetailFragment"
        tools:layout="@layout/fragment_game_detail"
        >

        <argument
            android:name="gameId"
            app:argType="integer"
            />

        <argument
            android:name="isRawgGame"
            app:argType="boolean"
            android:defaultValue="false"
            />

    </fragment>

</navigation>