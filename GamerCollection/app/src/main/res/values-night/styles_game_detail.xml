<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AddImage">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="srcCompat">@drawable/ic_add_image_dark</item>
    </style>

    <style name="GameDetailEditTextWithRemoveImage" parent="GameDetailEditText">
        <item name="customEditText_icon">@drawable/ic_remove_text_dark</item>
    </style>

    <style name="SongsEmptyLayout">
        <item name="emptyListLayout_image">@drawable/ic_song_dark</item>
    </style>

    <style name="SetImageEditText">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="customEditText_type">"URL"</item>
        <item name="customEditText_font">@font/roboto_regular</item>
        <item name="customEditText_text_size">@dimen/font_medium</item>
        <item name="customEditText_icon">@drawable/ic_remove_text_dark</item>
        <item name="customEditText_ime_option">"DONE"</item>
    </style>

    <style name="SongInfoImage">
        <item name="android:layout_width">@dimen/size_big</item>
        <item name="android:layout_height">@dimen/size_big</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="srcCompat">@drawable/ic_song_dark</item>
    </style>

    <style name="NewSongCustomEditText">
        <item name="customEditText_font">@font/roboto_regular</item>
        <item name="customEditText_text_size">@dimen/font_large</item>
        <item name="customEditText_icon">@drawable/ic_remove_text_dark</item>
    </style>

</resources>