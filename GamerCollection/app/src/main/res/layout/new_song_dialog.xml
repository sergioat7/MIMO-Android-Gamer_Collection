<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_bordered_view"
    >

    <es.upsa.mimo.gamercollection.customviews.CustomEditText
        android:id="@+id/custom_edit_text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1"
        style="@style/NewSongNameEditText"
        />

    <es.upsa.mimo.gamercollection.customviews.CustomEditText
        android:id="@+id/custom_edit_text_singer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/custom_edit_text_name"
        app:layout_constraintStart_toStartOf="@+id/custom_edit_text_name"
        app:layout_constraintTop_toBottomOf="@+id/custom_edit_text_name"
        style="@style/NewSongSingerEditText"
        />

    <es.upsa.mimo.gamercollection.customviews.CustomEditText
        android:id="@+id/custom_edit_text_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/custom_edit_text_singer"
        app:layout_constraintStart_toStartOf="@+id/custom_edit_text_singer"
        app:layout_constraintTop_toBottomOf="@+id/custom_edit_text_singer"
        style="@style/NewSongUrlEditText"
        />

    <Button
        android:id="@+id/button_accept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_edit_text_url"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.5"
        style="@style/PopupAcceptButton"
        />

</androidx.constraintlayout.widget.ConstraintLayout>