<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import
            type="android.view.View"
            />

        <variable
            name="saga"
            type="es.upsa.mimo.gamercollection.models.responses.SagaResponse"
            />

        <variable
            name="onItemClickListener"
            type="es.upsa.mimo.gamercollection.adapters.OnItemClickListener"
            />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/image_view_arrow"
                >

                <LinearLayout
                    android:id="@+id/linear_layout_title_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.GamerCollection.ViewSagaNameContainer"
                    >

                    <EditText
                        android:id="@+id/edit_text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        style="@style/Widget.GamerCollection.EditTextSaga"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image_view_edit"
                    style="@style/Widget.GamerCollection.ImageViewAddGameToSaga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/linear_layout_title_container"
                    android:onClick="@{() -> onItemClickListener.onItemClick(saga.id)}" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/image_view_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_normal"
                android:src="@drawable/ic_triangle_up"
                android:visibility="@{saga.games.empty ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_tiny"
            android:background="@color/colorSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraint_layout_name"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>