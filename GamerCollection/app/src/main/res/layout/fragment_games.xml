<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import
            type="android.view.View"
            />

        <import
            type="es.upsa.mimo.gamercollection.utils.ScrollPosition"
            />

        <variable
            name="fragment"
            type="es.upsa.mimo.gamercollection.fragments.GamesFragment"
            />

        <variable
            name="viewModel"
            type="es.upsa.mimo.gamercollection.viewmodels.GamesViewModel"
            />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.GamesFragment"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/games_toolbar_menu"
            app:title="@{@plurals/games_number_title(viewModel.gamesCount.size(), viewModel.gamesCount.size())}"
            tools:title="120 games"
            style="@style/Widget.GamerCollection.Toolbar"
            />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_24dp"
                >

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_view_games"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:background="@drawable/rounded_background_search_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_games"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_200dp"
                    app:games="@{viewModel.games}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_view_games"
                    tools:listitem="@layout/item_game"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <include
            layout="@layout/content_no_results"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="@{viewModel.games.empty ? View.VISIBLE : View.GONE}"
            app:image="@{@drawable/ic_games}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>