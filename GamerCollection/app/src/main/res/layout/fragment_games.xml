<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import
            type="android.view.View"
            />

        <import
            type="es.upsa.mimo.gamercollection.utils.ScrollPosition"
            />

        <variable
            name="fragment"
            type="es.upsa.mimo.gamercollection.fragments.GamesFragment"
            />

        <variable
            name="viewModel"
            type="es.upsa.mimo.gamercollection.viewmodels.GamesViewModel"
            />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.GamesFragment"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/games_toolbar_menu"
            app:title="@{@plurals/games_number_title(viewModel.gamesCount.size(), viewModel.gamesCount.size())}"
            tools:title="120 games"
            style="@style/Widget.GamerCollection.Toolbar"
            />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_24dp"
                >

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_view_games"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:background="@drawable/rounded_background_search_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_in_progress_games"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_300dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:visibility='@{viewModel.inProgressGamesVisible ? View.VISIBLE : View.GONE}'
                    app:games="@{viewModel.inProgressGames}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_view_games"
                    tools:listitem="@layout/item_game_vertical_display"
                    />

                <View
                    android:id="@+id/view_separator_in_progress_pending"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_1dp"
                    android:layout_marginStart="@dimen/margin_24dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_24dp"
                    android:background="@color/colorPrimaryLight"
                    android:visibility="@{viewModel.pendingGamesVisible &amp;&amp; viewModel.inProgressGamesVisible ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_in_progress_games"
                    />

                <TextView
                    android:id="@+id/text_view_pending_games"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_24dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:text="@string/pending"
                    android:visibility="@{viewModel.pendingGamesVisible ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_separator_in_progress_pending"
                    style="@style/Widget.GamerCollection.TextView.Title.Section"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_pending_games"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_300dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/padding_12dp"
                    android:paddingEnd="@dimen/padding_12dp"
                    android:visibility="@{viewModel.pendingGamesVisible ? View.VISIBLE : View.GONE}"
                    app:games="@{viewModel.pendingGames}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_pending_games"
                    tools:listitem="@layout/item_game_vertical_display"
                    />

                <View
                    android:id="@+id/view_separator_pending_finished"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_1dp"
                    android:layout_marginStart="@dimen/margin_24dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_24dp"
                    android:background="@color/colorPrimaryLight"
                    android:visibility="@{viewModel.finishedGamesVisible &amp;&amp; (viewModel.inProgressGamesVisible || viewModel.pendingGamesVisible) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_pending_games"
                    />

                <TextView
                    android:id="@+id/text_view_finished_games"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_24dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:text="@string/finished"
                    android:visibility="@{viewModel.finishedGamesVisible ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_separator_pending_finished"
                    style="@style/Widget.GamerCollection.TextView.Title.Section"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_games"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_300dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/padding_12dp"
                    android:paddingEnd="@dimen/padding_12dp"
                    android:visibility="@{viewModel.finishedGamesVisible ? View.VISIBLE : View.GONE}"
                    app:games="@{viewModel.finishedGames}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_finished_games"
                    tools:listitem="@layout/item_game_vertical_display"
                    />

                <include
                    android:id="@+id/content_view_no_results"
                    layout="@layout/content_no_results"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.noResultsVisible ? View.VISIBLE : View.GONE}"
                    app:image="@{@drawable/ic_games}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_games"
                    app:layout_constraintWidth_percent="0.7"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>