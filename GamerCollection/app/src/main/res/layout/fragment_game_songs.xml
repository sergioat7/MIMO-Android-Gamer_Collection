<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import
            type="android.view.View"
            />

        <import
            type="java.util.List"
            />

        <import
            type="es.upsa.mimo.gamercollection.models.responses.SongResponse"
            />

        <variable
            name="songs"
            type="List&lt;SongResponse>"
            />

        <variable
            name="editable"
            type="Boolean"
            />

    </data>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.GameSongsFragment"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_songs"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_small"
                android:visibility="@{songs.empty ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toTopOf="@+id/button_add_song"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <es.upsa.mimo.gamercollection.customviews.EmptyListLayout
                android:id="@+id/layout_empty_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_small"
                android:visibility="@{songs.empty ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/button_add_song"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.GamerCollection.SongsEmptyLayout"
                />

            <Button
                android:id="@+id/button_add_song"
                android:layout_height="wrap_content"
                android:visibility="@{editable ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/Widget.GamerCollection.Button.Rounded.Action.AddSong"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>