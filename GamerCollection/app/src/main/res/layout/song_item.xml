<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import
            type="android.view.View"
            />

        <variable
            name="darkMode"
            type="Boolean"
            />

        <variable
            name="song"
            type="es.upsa.mimo.gamercollection.models.responses.SongResponse"
            />

        <variable
            name="editable"
            type="Boolean"
            />

        <variable
            name="onItemClickListener"
            type="es.upsa.mimo.gamercollection.adapters.OnItemClickListener"
            />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/image_view_song"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.GamerCollection.ImageViewSongInfo"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_view_remove"
            app:layout_constraintStart_toEndOf="@+id/image_view_song"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.GamerCollection.ViewSongInfoContainer"
            >

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_large"
                android:text="@{song.name}"
                style="@style/Widget.GamerCollection.TextView.Bold"
                />

            <TextView
                android:id="@+id/text_view_singer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_mini"
                android:layout_marginBottom="@dimen/margin_mini"
                android:text="@{song.singer}"
                style="@style/Widget.GamerCollection.TextView.Regular"
                />

            <TextView
                android:id="@+id/text_view_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{song.url}"
                style="@style/Widget.GamerCollection.TextView.Regular"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_view_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:src="@{darkMode ? @drawable/ic_trash_dark : @drawable/ic_trash_light}"
            android:visibility="@{editable ? View.VISIBLE : View.GONE}"
            android:onClick="@{() -> onItemClickListener.onItemClick(song.id)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>