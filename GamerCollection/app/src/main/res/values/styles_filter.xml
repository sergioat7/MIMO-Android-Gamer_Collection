<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.GamerCollection.ScrollViewContent.ModalFilter">
        <item name="android:layout_marginTop">@dimen/margin_mini</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:background">@color/colorSecondary</item>
    </style>

    <style name="Widget.GamerCollection.ScrollViewContent.HorizontalModalFilter">
        <item name="android:layout_height">@dimen/size_big</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Bold.ModalFilterTitle">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="Widget.GamerCollection.RoundedSelectorButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_filter_selector_button</item>
        <item name="android:textColor">@drawable/state_button_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="Widget.GamerCollection.RatingLayout">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.GamerCollection.RatingBar.ModalFilter">
        <item name="android:isIndicator">false</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="Widget.GamerCollection.FilterButtonsContent">
        <item name="android:layout_marginBottom">@dimen/margin_mini</item>
        <item name="android:layout_marginStart">@dimen/margin_mini</item>
        <item name="android:layout_marginEnd">@dimen/margin_mini</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Widget.GamerCollection.FilterButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_weight">1</item>
        <item name="textAllCaps">false</item>
        <item name="maxLines">1</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="Widget.GamerCollection.FilterButtonSeparator">
        <item name="android:layout_width">@dimen/margin_mini</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>