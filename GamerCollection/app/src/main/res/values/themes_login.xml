<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CredentialsEditText" parent="CustomEditText">
        <item name="android:ems">10</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="UsernameEditText" parent="CredentialsEditText">
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:hint">@string/login_username</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="PasswordEditText" parent="CredentialsEditText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:hint">@string/login_password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="LoginButton" parent="@style/RoundedButton.Action">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:text">@string/login_access</item>
    </style>

    <style name="NoAccountText">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:text">@string/login_not_account</item>
        <item name="android:textColor">@color/textPrimaryLight</item>
    </style>

    <style name="NoAccountButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:text">@string/login_register</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorInProgress</item>
    </style>

    <style name="RegisterButton" parent="@style/RoundedButton.Action">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:text">@string/register</item>
    </style>

</resources>