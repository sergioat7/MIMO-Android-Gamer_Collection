<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="dialogCornerRadius">5dp</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorSwitchThumbNormal">@color/colorPrimary</item>
    </style>

    <style name="Theme.GamerCollection" parent="Theme">
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_keyboard_backspace_black_24dp</item>
    </style>

    <style name="Theme.GamerCollection.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="dialogCornerRadius">5dp</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_keyboard_backspace_white_24dp</item>
    </style>

    <style name="Theme.GamerCollection.DialogTransparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomMenu">
        <item name="android:background">@color/colorSecondary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="menu">@menu/bottom_nav_menu</item>
    </style>

    <style name="RoundedButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RoundedButton.Action">
        <item name="android:background">@drawable/rounded_button_green</item>
    </style>

    <style name="RoundedButton.Delete">
        <item name="android:background">@drawable/rounded_button_red</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textPrimaryLight</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="CustomEditText.Regular" parent="CustomEditText">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="CustomEditText.Bold" parent="CustomEditText">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="CustomTextView.Bold" parent="CustomTextView">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="CustomTextView.Regular" parent="CustomTextView">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressTint">@color/colorInProgress</item>
    </style>

    <style name="CustomRatingBar.LightBackground" parent="CustomRatingBar">
        <item name="android:progressBackgroundTint">@color/colorPrimaryLight</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
    </style>

    <style name="CustomRatingBar.DarkBackground" parent="CustomRatingBar">
        <item name="android:progressBackgroundTint">@color/colorSecondaryLight</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:minHeight">30dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="CustomRadioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:buttonTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="LoadingProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/colorFinished</item>
    </style>

</resources>