<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GamerCollection.General" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/buttonPrimary</item>
        <item name="colorSwitchThumbNormal">@color/buttonSecondary</item>
        <item name="titleTextColor">@color/colorSecondary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_light</item>
    </style>

    <style name="Theme.GamerCollection.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorSecondary</item>
    </style>

    <style name="Theme.GamerCollection.NoActionBar.GameDetail">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_dark</item>
    </style>

    <style name="Theme.GamerCollection.DialogTransparent" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>