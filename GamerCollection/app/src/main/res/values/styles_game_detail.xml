<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.GamerCollection.ImageViewNew">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="srcCompat">@drawable/ic_add_image</item>
    </style>

    <style name="Widget.GamerCollection.CustomEditText.GameTitle">
        <item name="customEditText_type">"TEXT"</item>
        <item name="customEditText_placeholder">@string/game_detail_placeholder_name</item>
        <item name="customEditText_font">@font/roboto_bold</item>
        <item name="customEditText_text_size">@dimen/font_larger</item>
    </style>

    <style name="Widget.GamerCollection.Button.Rating">
        <item name="android:layout_height">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableStart">@drawable/ic_star_white_24dp</item>
        <item name="android:drawablePadding">@dimen/margin_medium_negative</item>
        <item name="android:drawableTint">@color/colorInProgress</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="Widget.GamerCollection.ImageViewPegi">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxWidth">@dimen/size_big</item>
    </style>

    <style name="Widget.GamerCollection.TabLayout.GameDetail" parent="Widget.Design.TabLayout">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="tabIndicatorColor">@color/colorFinished</item>
        <item name="tabSelectedTextColor">@color/colorSecondary</item>
        <item name="tabTextColor">@color/colorSecondaryLight</item>
    </style>

    <style name="Widget.GamerCollection.ScrollViewContent.GameData">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="Widget.GamerCollection.ViewHiddenContent">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Bold.GameDataTitle">
        <item name="android:layout_width">@dimen/size_higher</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="Widget.GamerCollection.CustomEditText.GameDetail">
        <item name="android:layout_gravity">center</item>
        <item name="customEditText_font">@font/roboto_regular</item>
        <item name="customEditText_text_size">@dimen/font_medium</item>
    </style>

    <style name="Widget.GamerCollection.CustomEditText.GameDetail.WithRemoveImage">
        <item name="customEditText_icon">@drawable/ic_remove_text</item>
    </style>

    <style name="Widget.GamerCollection.CustomEditText.GameDetail.WithRemoveImage.ReleaseDate">
        <item name="customEditText_type">"DATE"</item>
        <item name="customEditText_placeholder">@string/game_detail_select_date</item>
    </style>

    <style name="Widget.GamerCollection.CustomEditText.GameDetail.WithRemoveImage.PurchaseDate">
        <item name="customEditText_type">"DATE"</item>
        <item name="customEditText_placeholder">@string/game_detail_select_date</item>
    </style>

    <style name="Widget.GamerCollection.CustomEditText.GameDetail.WithRemoveImage.PurchaseLocation">
        <item name="customEditText_type">"NONE"</item>
        <item name="customEditText_placeholder">@string/game_detail_placeholder_purchase_location</item>
    </style>

    <style name="Widget.GamerCollection.SongsEmptyLayout">
        <item name="emptyListLayout_image">@drawable/ic_song</item>
    </style>

    <style name="Widget.GamerCollection.Button.Rounded.Action.AddSong">
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:text">@string/add</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.GamerCollection.TextView.SetImageTitle">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:text">@string/game_detail_image_modal_title</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Widget.GamerCollection.CustomEditText.SetImage">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="customEditText_type">"URL"</item>
        <item name="customEditText_font">@font/roboto_regular</item>
        <item name="customEditText_text_size">@dimen/font_medium</item>
        <item name="customEditText_icon">@drawable/ic_remove_text</item>
        <item name="customEditText_ime_option">"DONE"</item>
    </style>

    <style name="Widget.GamerCollection.ImageViewSongInfo">
        <item name="android:layout_width">@dimen/size_big</item>
        <item name="android:layout_height">@dimen/size_big</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="srcCompat">@drawable/ic_song</item>
    </style>

    <style name="Widget.GamerCollection.ViewSongInfoContainer">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.GamerCollection.CustomEditText.NewSong">
        <item name="customEditText_font">@font/roboto_regular</item>
        <item name="customEditText_text_size">@dimen/font_large</item>
        <item name="customEditText_icon">@drawable/ic_remove_text</item>
    </style>

    <style name="Widget.GamerCollection.CustomEditText.NewSong.Name">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="customEditText_type">"TEXT"</item>
        <item name="customEditText_placeholder">@string/modal_song_placeholder_name</item>
        <item name="customEditText_ime_option">"NEXT"</item>
    </style>

    <style name="Widget.GamerCollection.CustomEditText.NewSong.Singer">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="customEditText_type">"TEXT"</item>
        <item name="customEditText_placeholder">@string/modal_song_placeholder_singer</item>
        <item name="customEditText_ime_option">"NEXT"</item>
    </style>

    <style name="Widget.GamerCollection.CustomEditText.NewSong.Url">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="customEditText_type">"URL"</item>
        <item name="customEditText_placeholder">@string/modal_song_placeholder_url</item>
        <item name="customEditText_ime_option">"DONE"</item>
    </style>

</resources>