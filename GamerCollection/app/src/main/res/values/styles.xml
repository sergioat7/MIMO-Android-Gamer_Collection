<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color2</item>
        <item name="android:colorBackground">@color/color1</item>
        <item name="titleTextColor">@color/color1</item>
    </style>

    <style name="AppThemeDialogTransparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="WhiteEditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/color2</item>
        <item name="android:textColor">@color/color2</item>
        <item name="android:textColorHint">@color/color2Light</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="WhiteEditText.Regular" parent="WhiteEditText">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="WhiteEditText.Bold" parent="WhiteEditText">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="WhiteEditText.GameDetails" parent="WhiteEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WhiteEditText.GameDetailsTitle" parent="WhiteEditText.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="WhiteTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color2</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="WhiteTextView.Bold" parent="WhiteTextView">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="WhiteTextView.Regular" parent="WhiteTextView">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="WhiteTextView.Regular.GameDetails" parent="WhiteTextView">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="RoundedButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:textColor">@color/color2</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RoundedButton.Action">
        <item name="android:background">@drawable/rounded_button_green</item>
    </style>

    <style name="RoundedButton.Delete">
        <item name="android:background">@drawable/rounded_button_red</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressTint">@color/color5</item>
    </style>

    <style name="CustomRatingBar.LightBackground" parent="CustomRatingBar">
        <item name="android:progressBackgroundTint">@color/color1Light</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
    </style>

    <style name="CustomRatingBar.DarkBackground" parent="CustomRatingBar">
        <item name="android:progressBackgroundTint">@color/color2Light</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:backgroundTint">@color/color2</item>
        <item name="android:minHeight">30dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="FilterButton" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/color1</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="WhiteTextView.Bold.ModalFilterTitle" parent="WhiteTextView.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="RoundedSelectorButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/rounded_filter_selector_button</item>
        <item name="android:textColor">@drawable/state_button_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>
