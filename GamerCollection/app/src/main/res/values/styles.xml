<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget" />

    <style name="TextAppearance" />

    <style name="Widget.GamerCollection" />

    <style name="TextAppearance.GamerCollection" />

    <!--  TextViews  -->

    <style name="Widget.GamerCollection.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Title">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Title.Toolbar">
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Title.Header">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Title.Section">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Title.StateButton">
        <item name="android:textColor">@drawable/state_button_text_color</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Title.GameItem">
        <item name="android:maxLines">3</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Title.Rating">
        <item name="android:textColor">@color/colorInProgress</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Title.NoRating">
        <item name="android:textColor">@color/colorInProgress</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Title.SongItem">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Title.SagaItem">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Description">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Description.NoAccount">
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Description.StateButton">
        <item name="android:textColor">@drawable/state_button_text_color</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Description.GameItem">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Description.Rating">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Description.SongItem">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Description.SagaGame">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <!--  TextInputLayout  -->

    <style name="Widget.GamerCollection.TextInputLayout.Bordered" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_text_input_layout_border</item>
        <item name="editTextStyle">@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox</item>
        <item name="hintTextAppearance">@style/TextAppearance.GamerCollection.Hint</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.GamerCollection.Rounded.10</item>
        <item name="android:textColorHint">@color/textTertiary</item>
        <item name="android:useDefaultMargins">false</item>
    </style>

    <style name="Widget.GamerCollection.TextInputLayout.BorderedDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/color_text_input_layout_border</item>
        <item name="editTextStyle">@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox</item>
        <item name="hintTextAppearance">@style/TextAppearance.GamerCollection.Hint</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.GamerCollection.Rounded.10</item>
        <item name="android:textColorHint">@color/textPrimary</item>
        <item name="android:useDefaultMargins">false</item>
    </style>

    <!--  Button  -->

    <style name="Widget.GamerCollection.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@null</item>
        <item name="iconPadding">@dimen/padding_8dp</item>
        <item name="android:insetTop">@dimen/no_padding</item>
        <item name="android:insetBottom">@dimen/no_padding</item>
    </style>

    <style name="Widget.GamerCollection.Button.Main">
        <item name="backgroundTint">@drawable/rounded_button_primary</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="shapeAppearance">@style/ShapeAppearance.GamerCollection.Rounded.15</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.GamerCollection.Button.Main.Icon">
        <item name="android:paddingStart">@dimen/padding_12dp</item>
        <item name="android:paddingEnd">@dimen/padding_12dp</item>
    </style>

    <!--  TextButton  -->

    <style name="Widget.GamerCollection.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@null</item>
        <item name="iconPadding">@dimen/padding_8dp</item>
        <item name="android:padding">@dimen/no_padding</item>
        <item name="android:insetTop">@dimen/no_padding</item>
        <item name="android:insetBottom">@dimen/no_padding</item>
        <item name="android:minHeight">@dimen/no_size</item>
        <item name="android:minWidth">@dimen/no_size</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.GamerCollection.TextButton.Main">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.GamerCollection.TextButton.Main.Action">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="Widget.GamerCollection.TextButton.Icon">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="iconTint">@color/colorInProgress</item>
    </style>

    <!--  ImageButton  -->

    <style name="Widget.GamerCollection.ImageButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="rippleColor">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">@null</item>
        <item name="android:minHeight">@null</item>
    </style>

    <!--  FloatingActionButton  -->

    <style name="Widget.GamerCollection.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="borderWidth">0dp</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="tint">@color/colorSecondary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.GamerCollection.FloatingActionButton.ListPosition">
        <item name="fabSize">mini</item>
        <item name="maxImageSize">@dimen/size_10dp</item>
    </style>

    <!--  RadioButton  -->

    <style name="Widget.GamerCollection.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <!--  RatingBar  -->

    <style name="Widget.GamerCollection.RatingBar" parent="Widget.MaterialRatingBar.RatingBar">
        <item name="mrb_fillBackgroundStars">false</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:progressTint">@color/colorInProgress</item>
        <item name="android:progressBackgroundTint">@color/colorInProgressLight</item>
        <item name="android:secondaryProgressTint">@color/colorInProgressLight</item>
    </style>

    <!--  TabLayout  -->

    <style name="Widget.GamerCollection.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorFinished</item>
        <item name="tabSelectedTextColor">@color/colorSecondary</item>
        <item name="tabTextColor">@color/colorSecondaryLight</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--  Chip  -->

    <style name="Widget.GamerCollection.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="checkedIcon">@drawable/ic_check</item>
        <item name="checkedIconVisible">true</item>
        <item name="chipBackgroundColor">@drawable/choice_chip_background_color</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
        <item name="chipStrokeWidth">@dimen/radius_2dp</item>
        <item name="rippleColor">@null</item>
        <item name="android:textColor">@drawable/choice_chip_text_color</item>
        <item name="android:textAppearance">@style/TextAppearance.GamerCollection.Chip</item>
    </style>

    <!--  Toolbar  -->

    <style name="Widget.GamerCollection.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/Widget.GamerCollection.TextView.Title.Toolbar</item>
        <item name="titleTextColor">@color/textSecondary</item>
    </style>

    <!--  BottomNavigationView  -->

    <style name="Widget.GamerCollection.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@drawable/bottom_navigation_icon_colors</item>
        <item name="itemTextColor">@drawable/bottom_navigation_text_colors</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.GamerCollection.ItemTextAppearanceActive</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.GamerCollection.ItemTextAppearanceInactive</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!--  ShapeAppearance  -->

    <style name="ShapeAppearance.GamerCollection.Rounded" parent="ShapeAppearance.MaterialComponents" />

    <style name="ShapeAppearance.GamerCollection.Rounded.10">
        <item name="cornerSize">@dimen/radius_10dp</item>
    </style>

    <style name="ShapeAppearance.GamerCollection.Rounded.15">
        <item name="cornerSize">@dimen/radius_15dp</item>
    </style>

    <!--  TextAppearance  -->

    <style name="TextAppearance.GamerCollection.ItemTextAppearanceActive">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="TextAppearance.GamerCollection.ItemTextAppearanceInactive">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="TextAppearance.GamerCollection.Chip" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="TextAppearance.GamerCollection.Hint" parent="TextAppearance.Design.Hint">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <!--  MaterialAlertDialog  -->

    <style name="MaterialAlertDialog.GamerCollection" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.GamerCollection.Rounded.10</item>
    </style>

    <style name="MaterialAlertDialog.GamerCollection.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:maxLines">@null</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="MaterialAlertDialog.GamerCollection.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:maxLines">@null</item>
        <item name="android:singleLine">false</item>
    </style>

</resources>