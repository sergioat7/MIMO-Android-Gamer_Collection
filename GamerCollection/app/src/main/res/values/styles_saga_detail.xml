<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.GamerCollection.EditText.Bold.SagaTitle">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_larger</item>
        <item name="android:layout_marginEnd">@dimen/margin_larger</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_extra_large</item>
        <item name="android:hint">@string/saga_detail_placeholder_name</item>
    </style>

    <style name="Widget.GamerCollection.TextView.Bold.AddGameTitle">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:text">@string/saga_detail_games_title</item>
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="Widget.GamerCollection.ImageButton.AddGame">
        <item name="android:layout_width">@dimen/margin_medium</item>
        <item name="android:layout_height">@dimen/margin_medium</item>
        <item name="android:background">@drawable/ic_add_game</item>
    </style>

    <style name="Widget.GamerCollection.AddGameSeparator">
        <item name="android:layout_height">@dimen/size_minimum</item>
        <item name="android:layout_marginTop">@dimen/margin_tiny</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Widget.GamerCollection.ScrollViewContent.SagaGames">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <style name="Widget.GamerCollection.GamesSelectorContent">
        <item name="android:layout_marginTop">@dimen/margin_mini</item>
        <item name="android:layout_marginStart">@dimen/margin_mini</item>
        <item name="android:layout_marginEnd">@dimen/margin_mini</item>
    </style>

</resources>