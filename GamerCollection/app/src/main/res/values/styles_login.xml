<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.GamerCollection.ImageViewLogo">
        <item name="android:src">@drawable/app_name</item>
    </style>

    <style name="Widget.GamerCollection.EditText.Credentials">
        <item name="android:ems">10</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="Widget.GamerCollection.EditText.Credentials.Username">
        <item name="android:layout_marginStart">@dimen/margin_larger</item>
        <item name="android:layout_marginEnd">@dimen/margin_larger</item>
        <item name="android:hint">@string/login_username</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Widget.GamerCollection.EditText.Credentials.Password">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:hint">@string/login_password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="Widget.GamerCollection.ImageButton.EditText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Widget.GamerCollection.ImageButton.EditText.Username">
        <item name="android:src">@drawable/ic_show_info</item>
    </style>

    <style name="Widget.GamerCollection.ImageButton.EditText.Password">
        <item name="android:src">@drawable/ic_show_password</item>
    </style>

    <style name="Widget.GamerCollection.Button.Rounded.Action.Login">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:text">@string/login_access</item>
    </style>

    <style name="Widget.GamerCollection.TextView.NoAccount">
        <item name="android:layout_marginEnd">@dimen/margin_tiny</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:text">@string/login_not_account</item>
        <item name="android:textColor">@color/textPrimaryLight</item>
    </style>

    <style name="Widget.GamerCollection.Button.NoAccount">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:text">@string/login_register</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Widget.GamerCollection.Button.Rounded.Action.Register">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:text">@string/register</item>
    </style>

</resources>